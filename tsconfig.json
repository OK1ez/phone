{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2023",
    "lib": ["es2023"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "strictFunctionTypes": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"],
      "@static/*": ["./static/*"],
      "@common/*": ["./src/common/*"]
    }
  },
  "include": ["./src", "./web"]
}
