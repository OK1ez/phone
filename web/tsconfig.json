{
  "files": [],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2023",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$apps": ["./src/apps"],
      "$apps/*": ["./src/apps/*"],
      "$phone": ["./src/phone"],
      "$phone/*": ["./src/phone/*"],
      "~/*": ["../*"],
      "@common/*": ["../src/common/*"]
    }
  },
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
